<div class="container">

<div class="row">
    <div class="col-lg-3 gap-2 mt-3">
  <a href="/new_note">
  <button class="btn btn-lg btn-light" type="button">
  Add new note
  </button>
  </a>
</div>


    <div class="col-md-12 mx-auto py-4">

      <div>
<%= will_paginate @notes, class: "flickr_pagination" %>
      </div>

      <div>
        <table class="table table-hover table-striped table-fixed align-middle">
          <thead>
            <tr class="table-secondary text-center">
              <th scope="row">
                Date
              </th>

              <th scope="row">
                Patient name
              </th>

              <th scope="row">
                Service
              </th>

              <th scope="row">
                Note
              </th>

              <th scope="row">
                Provider
              </th>
            </tr>
          </thead>

          <tbody>
            <% @notes.each do |a_note| %>
              <tr  class="clickable" onclick="window.location='/notes/<%= a_note.id %>';">
                <td>
                  <%= a_note.date.strftime("%b %d, %Y") %>
                </td>

                <td>
                  <%= a_note.patient.first_name %> <%= a_note.patient.last_name %>
                </td>

                <td>
                  <%= a_note.service.duration %> min <%= a_note.service.title %>
                </td>

                <td>
                <%= a_note.body.truncate(80, separator: ' ') %> 
                <% if a_note.user.id == @current_user.id %>
                  <span class="badge rounded-pill bg-secondary">Your note</span>
                  <% end %>
                </td>

                <td>
                  <%= a_note.user.first_name %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>

    </div>

</div>
</div>
